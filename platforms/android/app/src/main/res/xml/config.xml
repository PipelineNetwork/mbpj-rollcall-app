<?xml version='1.0' encoding='utf-8'?>
<widget id="com.darryncampbell.cordova.plugin.intent.api.exerciser" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="IntentShim">
        <param name="android-package" value="com.darryncampbell.cordova.plugin.intent.IntentShim" />
        <param name="onload" value="true" />
    </feature>
    <feature name="CordovaHttpPlugin">
        <param name="android-package" value="com.silkimen.cordovahttp.CordovaHttpPlugin" />
    </feature>
    <feature name="CordovaPluginsCleartext">
        <param name="android-package" value="cordova.plugins.cleartext" />
    </feature>
    <name>MBPJ IC Scanner</name>
    <description>
        A small application to demonstrate the API exposed by the cordova plugin: com.darryncampbell.cordova.plugin.intent.  Wraps the Android intent functionality of sendBroadcast and startActivity and various ways of receiving information back.
    </description>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
